		"cva": "catalog:",
		"ox": "catalog:",
		"qrcode": "catalog:",
		"react": "catalog:",
		"react-dom": "catalog:",
		"tailwind-merge": "catalog:",
		"tailwindcss": "catalog:",
		"tw-animate-css": "catalog:",
		"viem": "catalog:",
		"wagmi": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "catalog:",
		"@iconify/json": "catalog:",
